{
	"name": "ai-commits-cli",
	"version": "0.0.0",
	"description": "Writes your git commit messages for you with AI",
	"keywords": ["ai", "git", "commit", "openai"],
	"license": "MIT",
	"repository": "rocktimsaikia/ai-commits-cli",
	"author": "Rocktim Saikia",
	"type": "module",
	"files": ["dist"],
	"bin": {
		"ai-commits": "./dist/cli.js",
		"aic": "./dist/cli.js"
	},
	"scripts": {
		"build": "tsup",
		"lint": "biome lint .",
		"format": "biome format --write .",
		"type-check": "tsc",
		"dev": "tsx src/cli.ts",
		"prepack": "pnpm build && clean-pkg-json"
	},
	"dependencies": {
		"@clack/prompts": "^0.6.1",
		"@dqbd/tiktoken": "^1.0.2",
		"@types/ini": "^1.3.31",
		"cleye": "^1.3.2",
		"clipboardy": "^4.0.0",
		"execa": "^7.0.0",
		"ini": "^3.0.1",
		"kolorist": "^1.7.0",
		"openai": "^3.2.1"
	},
	"devDependencies": {
		"@biomejs/biome": "1.4.1",
		"@types/node": "^18.14.2",
		"clean-pkg-json": "^1.2.0",
		"tsup": "^8.5.0",
		"tsx": "^3.12.3",
		"typescript": "^4.9.5"
	},
	"engines": {
		"node": ">=18"
	},
	"release": {
		"branches": ["main"]
	},
	"tsup": {
		"entry": ["src/cli.ts"],
		"minify": true,
		"clean": true,
		"format": "esm"
	}
}
