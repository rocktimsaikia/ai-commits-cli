{
	"name": "@rocktimsaikia/aicommits",
	"version": "1.1.0",
	"description": "Generate commits with AI in terminal",
	"keywords": [
		"ai",
		"git",
		"commit",
		"openai"
	],
	"repository": "rocktimsaikia/ai-commits-cli",
	"license": "MIT",
	"author": "Rocktim Saikia",
	"type": "module",
	"bin": {
		"aicommits": "./dist/cli.js",
		"aic": "./dist/cli.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup",
		"dev": "tsx src/cli.ts",
		"format": "biome format --write .",
		"lint": "biome lint .",
		"prepack": "pnpm build",
		"type-check": "tsc",
		"test": "echo \"Error: no test specified\" && exit 0"
	},
	"release": {
		"branches": [
			"main"
		]
	},
	"dependencies": {
		"@clack/prompts": "^0.6.1",
		"@dqbd/tiktoken": "^1.0.2",
		"@types/ini": "^1.3.31",
		"cleye": "^1.3.2",
		"clipboardy": "^4.0.0",
		"execa": "^7.0.0",
		"ini": "^3.0.1",
		"kolorist": "^1.7.0",
		"openai": "^3.2.1"
	},
	"devDependencies": {
		"@biomejs/biome": "1.4.1",
		"@types/node": "^18.14.2",
		"tsup": "^8.5.0",
		"tsx": "^3.12.3",
		"typescript": "^4.9.5"
	},
	"engines": {
		"node": ">=18"
	},
	"tsup": {
		"entry": [
			"src/cli.ts"
		],
		"minify": true,
		"clean": true,
		"format": "esm"
	}
}
